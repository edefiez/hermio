{% extends 'base_admin.html.twig' %}

{% block title %}Change Password - Hermio{% endblock %}

{% block page_title %}{{ 'nav.settings'|trans }} - Change Password{% endblock %}

{% block admin_content %}
<div class="cards-dashboard-container" style="padding: 2rem; background: #f8f9fa; min-height: 100vh;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-key me-2" style="font-size: 1.5rem; color: #007bff;"></i>
            <h1 class="mb-0" style="font-size: 1.75rem; font-weight: 600;">{{ 'profile.change_password.title'|trans|default('Change Password') }}</h1>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4" style="border-radius: 12px; background: white;">
        <div class="card-body p-4">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control' ~ (form.currentPassword.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {{ form_errors(form.currentPassword) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control' ~ (form.newPassword.first.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {{ form_errors(form.newPassword.first) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control' ~ (form.newPassword.second.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {{ form_errors(form.newPassword.second) }}
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" style="border-radius: 8px; font-weight: 500;">
                        <i class="fas fa-save me-1"></i>{{ 'profile.change_password.submit'|trans|default('Change Password') }}
                    </button>
                    <a href="{{ path('app_profile') }}" class="btn btn-secondary" style="border-radius: 8px; font-weight: 500;">
                        <i class="fas fa-arrow-left me-1"></i>{{ 'profile.back_to_profile'|trans|default('Back to Profile') }}
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
