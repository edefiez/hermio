{% extends 'base_admin.html.twig' %}

{% block title %}Update Email - Hermio{% endblock %}

{% block page_title %}{{ 'nav.settings'|trans }} - Update Email{% endblock %}

{% block content %}
<div class="profile-container">
    <div class="profile-card">
        <h1>Update Email Address</h1>
        
        <p style="color: #666; margin-bottom: 20px;">
            After updating your email, you'll need to verify the new address.
        </p>
        
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.newEmail) }}
                {{ form_widget(form.newEmail, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.newEmail) }}
            </div>

            <div class="form-group">
                {{ form_label(form.currentPassword) }}
                {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.currentPassword) }}
            </div>

            <button type="submit" class="btn btn-primary">Update Email</button>
        {{ form_end(form) }}

        <div class="profile-actions" style="margin-top: 20px;">
            <a href="{{ path('app_profile') }}" class="btn btn-secondary">Back to Profile</a>
        </div>
    </div>
</div>
{% endblock %}
