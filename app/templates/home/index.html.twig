{% extends 'base.html.twig' %}

{% set currentLocale = app.request.locale|default('fr') %}

{% block title %}{{ 'home.meta.title'|trans }}{% endblock %}

{% block head %}
    <meta name="description" content="{{ 'home.meta.description'|trans }}">

    {# Open Graph tags #}
    <meta property="og:title" content="{{ 'home.meta.title'|trans }}">
    <meta property="og:description" content="{{ 'home.meta.description'|trans }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ url('app_home') }}">
        <meta property="og:locale" content="fr_FR">

    {# JSON-LD Structured Data #}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Hermio",
        "url": "{{ url('app_home') }}",
        "description": "{{ 'home.meta.description'|trans|e('js') }}",
        "sameAs": []
    }
    </script>
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Hermio",
        "url": "{{ url('app_home') }}",
        "potentialAction": {
            "@type": "SearchAction",
            "target": "{{ url('app_home') }}?q={search_term_string}",
            "query-input": "required name=search_term_string"
        }
    }
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body_wrapper %}
{# Page pleine largeur pour la home #}
<main class="home-wrapper">
    {% for label, messages in app.flashes %}
        <div class="container">
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    {% block body %}
<div class="home-page">
    {# Hero Section #}
    <section class="hero-section" id="hero">
        <div class="container">
            <div class="hero-content">
                <h1>{{ 'home.hero.title'|trans }}</h1>
                <p class="hero-subtitle">{{ 'home.hero.subtitle'|trans }}</p>
                <div class="cta-buttons">
                    <a href="{{ path('app_register') }}" class="btn btn-primary">{{ 'home.hero.cta_primary'|trans }}</a>
                    <a href="#how-it-works" class="btn btn-secondary">{{ 'home.hero.cta_secondary'|trans }}</a>
                </div>
            </div>
        </div>
    </section>

    {# How It Works Section #}
    <section class="section" id="how-it-works">
        <div class="container-xxl">
            <h2 class="section-title">{{ 'home.how_it_works.title'|trans }}</h2>
            <p class="section-subtitle">{{ 'home.how_it_works.subtitle'|trans }}</p>
            <div class="row g-4">
                <div class="col-12 col-md-4">
                    <div class="card h-100 text-center border-0 shadow">
                        <div class="card-body p-4 p-md-5">
                            <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px; font-size: 2rem; font-weight: 700;">1</div>
                            <h3 class="card-title h4 mb-3">{{ 'home.how_it_works.step1.title'|trans }}</h3>
                            <p class="card-text text-muted fs-6">{{ 'home.how_it_works.step1.description'|trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="card h-100 text-center border-0 shadow">
                        <div class="card-body p-4 p-md-5">
                            <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px; font-size: 2rem; font-weight: 700;">2</div>
                            <h3 class="card-title h4 mb-3">{{ 'home.how_it_works.step2.title'|trans }}</h3>
                            <p class="card-text text-muted fs-6">{{ 'home.how_it_works.step2.description'|trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="card h-100 text-center border-0 shadow">
                        <div class="card-body p-4 p-md-5">
                            <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px; font-size: 2rem; font-weight: 700;">3</div>
                            <h3 class="card-title h4 mb-3">{{ 'home.how_it_works.step3.title'|trans }}</h3>
                            <p class="card-text text-muted fs-6">{{ 'home.how_it_works.step3.description'|trans }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Features Section #}
    <section class="section section-light py-5" id="features">
        <div class="container-xxl">
            <h2 class="section-title">{{ 'home.features.title'|trans }}</h2>
            <p class="section-subtitle">{{ 'home.features.subtitle'|trans }}</p>
