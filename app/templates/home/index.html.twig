                                <h3 class="card-title h5 mb-3">
                                    <i class="fas fa-palette "></i>
                                    <span class="text-dark">{{ 'home.features.branding.title'|trans|raw }}</span>
                                </h3>
                            </div>
                            <p class="card-text text-muted">{{ 'home.features.branding.description'|trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow">
                        <div class="card-body p-5">
                            <div class="feature-icon text-primary mb-3">
                                <h3 class="card-title h5 mb-3">
                                    <i class="fas fa-chart-line "></i>
                                    <span class="text-dark">{{ 'home.features.analytics.title'|trans|raw }}</span>
                                </h3>
                            </div>
                            <p class="card-text text-muted">{{ 'home.features.analytics.description'|trans }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow">
                        <div class="card-body p-5">
                            <div class="feature-icon text-primary mb-3">
                                <h3 class="card-title h5 mb-3">
                                    <i class="fas fa-users "></i>
                                    <span class="text-dark">{{ 'home.features.team.title'|trans|raw }}</span>
                                </h3>
                            </div>
                            <p class="card-text text-muted">{{ 'home.features.team.description'|trans }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Pricing Section #}
    <section class="section py-5" id="pricing">
        <div class="container-xxl">
            <h2 class="section-title">{{ 'home.pricing.title'|trans }}</h2>
            <p class="section-subtitle">{{ 'home.pricing.subtitle'|trans }}</p>
            <div class="row g-4 justify-content-center align-items-stretch">
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow d-flex flex-column">
                        <div class="card-body text-center p-4 p-lg-5 d-flex flex-column">
                            <div class="pricing-header mb-4">
                                <h3 class="card-title h3 mb-3">{{ 'home.pricing.free.name'|trans }}</h3>
                                <div class="display-3 fw-bold text-primary mb-2">{{ 'home.pricing.free.price'|trans }}</div>
                                <p class="text-muted fs-5 mb-0">{{ 'home.pricing.free.period'|trans }}</p>
                            </div>
                            <ul class="list-unstyled text-start mb-4 flex-grow-1">
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.free.feature1'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.free.feature2'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.free.feature3'|trans }}</li>
                            </ul>
                            <div class="mt-auto">
                                <a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-lg w-100 py-3">{{ 'home.pricing.free.cta'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-lg d-flex flex-column" style="transform: scale(1.05);">
                        <div class="card-header text-white text-center py-3" style="background: linear-gradient(135deg, #4F46E5 0%, #EC4899 100%);">
                            <span class="badge bg-white text-primary fs-6 px-3 py-2">{{ 'home.pricing.pro.badge'|trans }}</span>
                        </div>
                        <div class="card-body text-center p-4 p-lg-5 d-flex flex-column">
                            <div class="pricing-header mb-4">
                                <h3 class="card-title h3 mb-3">{{ 'home.pricing.pro.name'|trans }}</h3>
                                <div class="display-3 fw-bold text-primary mb-2">{{ 'home.pricing.pro.price'|trans }}</div>
                                <p class="text-muted fs-5 mb-0">{{ 'home.pricing.pro.period'|trans }}</p>
                            </div>
                            <ul class="list-unstyled text-start mb-4 flex-grow-1">
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.pro.feature1'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.pro.feature2'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.pro.feature3'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.pro.feature4'|trans }}</li>
                            </ul>
                            <div class="mt-auto">
                                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg w-100 py-3">{{ 'home.pricing.pro.cta'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow d-flex flex-column">
                        <div class="card-body text-center p-4 p-lg-5 d-flex flex-column">
                            <div class="pricing-header mb-4">
                                <h3 class="card-title h3 mb-3">{{ 'home.pricing.enterprise.name'|trans }}</h3>
                                <div class="display-3 fw-bold text-primary mb-2">{{ 'home.pricing.enterprise.price'|trans }}</div>
                                <p class="text-muted fs-5 mb-0">{{ 'home.pricing.enterprise.period'|trans }}</p>
                            </div>
                            <ul class="list-unstyled text-start mb-4 flex-grow-1">
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.enterprise.feature1'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.enterprise.feature2'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.enterprise.feature3'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.enterprise.feature4'|trans }}</li>
                                <li class="mb-3 fs-6"><i class="fas fa-check-circle text-success me-2"></i> {{ 'home.pricing.enterprise.feature5'|trans }}</li>
                            </ul>
                            <div class="mt-auto">
                                <a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-lg w-100 py-3">{{ 'home.pricing.enterprise.cta'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# FAQ Section #}
    <section class="section section-light py-5" id="faq">
        <div class="container-xxl">
            <h2 class="section-title">{{ 'home.faq.title'|trans }}</h2>
            <p class="section-subtitle">{{ 'home.faq.subtitle'|trans }}</p>
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10">
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item mb-3 border-0 shadow-sm">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed fs-5" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    {{ 'home.faq.q1.question'|trans }}
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body fs-6">
                                    {{ 'home.faq.q1.answer'|trans }}
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item mb-3 border-0 shadow-sm">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed fs-5" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    {{ 'home.faq.q2.question'|trans }}
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body fs-6">
                                    {{ 'home.faq.q2.answer'|trans }}
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item mb-3 border-0 shadow-sm">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed fs-5" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
