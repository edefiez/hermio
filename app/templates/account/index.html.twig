{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'account.management.title'|trans }} - Hermio{% endblock %}

{% block page_title %}{{ 'account.management.title'|trans }}{% endblock %}

{% block admin_content %}
<div class="cards-dashboard-container" style="padding: 2rem; background: #f8f9fa; min-height: 100vh;">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-circle me-2" style="font-size: 1.5rem; color: #007bff;"></i>
                    <h1 class="mb-0" style="font-size: 1.75rem; font-weight: 600;">{{ 'account.management.title'|trans }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 col-12 mb-3">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1" style="font-size: 0.875rem; font-weight: 500;">{{ 'account.email'|trans }}</p>
                            <h2 class="mb-0" style="font-size: 1.25rem; font-weight: 600; color: #212529;">{{ user.email }}</h2>
                        </div>
                        <div style="width: 56px; height: 56px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-envelope text-white" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-12 mb-3">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1" style="font-size: 0.875rem; font-weight: 500;">{{ 'account.plan.current'|trans }}</p>
                            <h2 class="mb-0" style="font-size: 1.25rem; font-weight: 600; color: #212529;">
                                {{ planSummary.type.getDisplayName() }}
                                <span class="badge badge-{{ planSummary.type == constant('App\\Enum\\PlanType::FREE') ? 'warning' : (planSummary.type == constant('App\\Enum\\PlanType::PRO') ? 'success' : 'primary') }}" style="font-size: 0.75rem;">
                                    {{ planSummary.type.value }}
                                </span>
                            </h2>
                        </div>
                        <div style="width: 56px; height: 56px; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-crown text-white" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-12 mb-3">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1" style="font-size: 0.875rem; font-weight: 500;">{{ 'account.quota.summary'|trans }}</p>
                            <h2 class="mb-0" style="font-size: 1.25rem; font-weight: 600; color: #212529;">
                                {% if planSummary.limit is null %}
                                    {{ 'account.quota.unlimited'|trans }}
                                {% else %}
                                    {{ planSummary.usage }} / {{ planSummary.limit }}
                                {% endif %}
                            </h2>
                        </div>
                        <div style="width: 56px; height: 56px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-id-card text-white" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <h3 class="mb-3" style="font-size: 1.25rem; font-weight: 600;">{{ 'account.management.actions'|trans }}</h3>
                    <div class="d-flex gap-2 flex-wrap">
                        <a href="{{ path('app_account_my_plan') }}" class="btn btn-primary" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                            <i class="fas fa-info-circle me-2"></i>{{ 'account.view_plan_details'|trans }}
                        </a>
                        <a href="{{ path('app_profile') }}" class="btn btn-secondary" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                            <i class="fas fa-user me-2"></i>{{ 'account.back_to_profile'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

