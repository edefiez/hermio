{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'account.my_plan.title'|trans }} - Hermio{% endblock %}

{% block page_title %}{{ 'account.my_plan.title'|trans }}{% endblock %}

{% block admin_content %}
<div class="cards-dashboard-container" style="padding: 2rem; background: #f8f9fa; min-height: 100vh;">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-crown me-2" style="font-size: 1.5rem; color: #007bff;"></i>
                    <h1 class="mb-0" style="font-size: 1.75rem; font-weight: 600;">{{ 'account.my_plan.title'|trans }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 col-12 mb-3">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <h3 class="mb-3" style="font-size: 1.25rem; font-weight: 600;">{{ 'account.plan.type'|trans }}</h3>
                    <div class="d-flex align-items-center mb-3">
                        <h2 class="mb-0 me-3" style="font-size: 2rem; font-weight: 700; color: #212529;">{{ planType.getDisplayName() }}</h2>
                        <span class="badge badge-{{ planType == constant('App\\Enum\\PlanType::FREE') ? 'warning' : (planType == constant('App\\Enum\\PlanType::PRO') ? 'success' : 'primary') }}" style="font-size: 0.875rem; padding: 0.5rem 1rem;">
                            {{ planType.value }}
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-12 mb-3">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <h3 class="mb-3" style="font-size: 1.25rem; font-weight: 600;">{{ 'account.quota.limit'|trans }}</h3>
                    <h2 class="mb-0" style="font-size: 2rem; font-weight: 700; color: #212529;">
                        {% if isUnlimited %}
                            {{ 'account.quota.unlimited'|trans }}
                        {% else %}
                            {{ quotaLimit }} {{ 'account.quota.cards'|trans }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <div class="card shadow-sm border-0 mb-4" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <h3 class="mb-3" style="font-size: 1.25rem; font-weight: 600;">{{ 'account.quota.usage'|trans }}</h3>
                    <div class="mb-3">
                        <h2 class="mb-2" style="font-size: 2rem; font-weight: 700; color: #212529;">
                            {{ currentUsage }} {{ 'account.quota.cards'|trans }}
                        </h2>
                        {% if not isUnlimited and quotaLimit %}
                            {% set percentage = (currentUsage / quotaLimit * 100)|round %}
                            <div class="progress mb-2" style="height: 24px; border-radius: 12px;">
                                <div class="progress-bar
                                    {% if percentage >= 100 %}bg-danger
                                    {% elseif percentage >= 80 %}bg-warning
                                    {% else %}bg-success
                                    {% endif %}"
                                    role="progressbar"
                                    style="width: {{ percentage }}%; border-radius: 12px;"
                                    aria-valuenow="{{ percentage }}"
                                    aria-valuemin="0"
                                    aria-valuemax="100">
                                    <strong>{{ percentage }}%</strong>
                                </div>
                            </div>
                            <small class="text-muted d-block" style="font-size: 0.875rem;">{{ 'account.quota.used'|trans }}</small>
                        {% endif %}
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12 mb-2">
                            <p class="text-muted mb-1" style="font-size: 0.875rem; font-weight: 500;">{{ 'account.plan.activated'|trans }}</p>
                            <p class="mb-0" style="font-size: 1rem;">{{ account.createdAt|date('Y-m-d H:i:s') }}</p>
                        </div>
                        {% if account.updatedAt %}
                        <div class="col-md-6 col-12 mb-2">
                            <p class="text-muted mb-1" style="font-size: 0.875rem; font-weight: 500;">{{ 'account.plan.last_modified'|trans }}</p>
                            <p class="mb-0" style="font-size: 1rem;">{{ account.updatedAt|date('Y-m-d H:i:s') }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {% if planType == constant('App\\Enum\\PlanType::FREE') %}
                <div class="card shadow-sm border-0 mb-4" style="border-radius: 12px; background: white; border: 2px solid #28a745;">
                    <div class="card-body p-4">
                        <h3 class="mb-3" style="font-size: 1.25rem; font-weight: 600;">{{ 'subscription.upgrade.title'|trans }}</h3>
                        <div class="d-flex gap-2 flex-wrap">
                            <form method="post" action="{{ path('app_subscription_checkout_create') }}" style="display: inline;">
                                <input type="hidden" name="planType" value="pro">
                                <button type="submit" class="btn btn-success" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                                    {{ 'subscription.upgrade.pro'|trans }}
                                </button>
                            </form>
                            <form method="post" action="{{ path('app_subscription_checkout_create') }}" style="display: inline;">
                                <input type="hidden" name="planType" value="enterprise">
                                <button type="submit" class="btn btn-primary" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                                    {{ 'subscription.upgrade.enterprise'|trans }}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% elseif planType == constant('App\\Enum\\PlanType::PRO') %}
                <div class="card shadow-sm border-0 mb-4" style="border-radius: 12px; background: white; border: 2px solid #007bff;">
                    <div class="card-body p-4">
                        <h3 class="mb-3" style="font-size: 1.25rem; font-weight: 600;">{{ 'subscription.upgrade.title'|trans }}</h3>
                        <form method="post" action="{{ path('app_subscription_checkout_create') }}" style="display: inline;">
                            <input type="hidden" name="planType" value="enterprise">
                            <button type="submit" class="btn btn-primary" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                                {{ 'subscription.upgrade.enterprise'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <a href="{{ path('app_account_index') }}" class="btn btn-secondary" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                        <i class="fas fa-arrow-left me-2"></i>{{ 'account.back_to_account'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

