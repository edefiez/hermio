{% extends 'base.html.twig' %}

{% block title %}Login - Hermio{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <h1>Login</h1>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="form-group">
                <label for="username">Email:</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}" 
                       class="form-control" required autofocus autocomplete="email">
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" 
                       class="form-control" required autocomplete="current-password">
            </div>

            <div class="form-group">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary">Login</button>
        </form>

        <div class="auth-links">
            <p>Don't have an account? <a href="{{ path('app_register') }}">Register here</a></p>
            <p><a href="#">Forgot your password?</a></p>
        </div>
    </div>
</div>
{% endblock %}
