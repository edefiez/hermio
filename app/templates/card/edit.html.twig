{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'card.edit.title'|trans }} - Hermio{% endblock %}

{% block page_title %}{{ 'card.edit.title'|trans }}{% endblock %}

{% block admin_content %}
<div class="card shadow-sm mb-4">
    <div class="card-header card-header-gradient">
        <h1 class="h3 mb-0">
            <i class="fas fa-edit me-2"></i>{{ 'card.edit.title'|trans }}
        </h1>
    </div>
    <div class="card-body">
        {# Secure Public URL Section #}
                    <div class="card border-primary mb-4">
                        <div class="card-header bg-light border-primary">
                            <h3 class="h5 mb-0 text-primary">
                                <i class="fas fa-lock me-2"></i>{{ 'card.security.secure_url'|trans }}
            </h3>
                        </div>
                        <div class="card-body">
                            <div class="bg-white p-3 rounded border mb-3">
                                <code class="text-break d-block">{{ app.request.schemeAndHttpHost }}{{ card.publicUrl }}</code>
            </div>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                <button type="button" class="btn btn-primary btn-sm" onclick="copyToClipboard('{{ app.request.schemeAndHttpHost }}{{ card.publicUrl|e('js') }}')">
                                    <i class="fas fa-copy me-1"></i>{{ 'card.security.copy_url'|trans }}
                </button>
                <a href="{{ card.publicUrl }}" target="_blank" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-external-link-alt me-1"></i>{{ 'card.view'|trans }}
                </a>
                                <form method="post" action="{{ path('app_card_regenerate_key', {id: card.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'card.security.regenerate_key_confirm'|trans }}');">
                    <input type="hidden" name="_token" value="{{ csrf_token('regenerate' ~ card.id) }}">
                    <button type="submit" class="btn btn-warning btn-sm">
                                        <i class="fas fa-sync-alt me-1"></i>{{ 'card.security.regenerate_key'|trans }}
                    </button>
                </form>
            </div>
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>{{ 'card.security.warning'|trans }}
                            </div>
            </div>
        </div>

        {% include 'card/_form_flash_messages.html.twig' %}

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            {% include 'card/_form_basic_info.html.twig' %}

            {% include 'card/_form_social_networks.html.twig' %}

                        {# Assignations d'Ã©quipe #}
            {% if isEnterprise and canManageAssignments and assignmentForm %}
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h3 class="h5 mb-0">
                                        <i class="fas fa-users me-2"></i>{{ 'card.assignments.title'|trans }}
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted mb-3">{{ 'card.assignments.description'|trans }}</p>

                    {% if currentAssignments|length > 0 %}
                                        <div class="mb-3">
                                            <strong class="d-block mb-2">{{ 'card.assignments.current'|trans }}:</strong>
                                            <ul class="list-group">
                                {% for assignment in currentAssignments %}
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <span>{{ assignment.teamMember.email }}</span>
                                                        <span class="badge bg-info">{{ assignment.teamMember.role.getDisplayName()|trans }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                                    {{ form_start(assignmentForm, {'action': path('app_card_edit', {id: card.id}), 'method': 'POST', 'attr': {'class': 'mt-3'}}) }}
                                        <div class="mb-3">
                                            {{ form_label(assignmentForm.teamMembers, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(assignmentForm.teamMembers, {'attr': {'class': 'form-select' ~ (assignmentForm.teamMembers.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                                            {% if assignmentForm.teamMembers.vars.errors|length > 0 %}
                                                <div class="invalid-feedback d-block">
                                                    {{ form_errors(assignmentForm.teamMembers) }}
                                                </div>
                                            {% endif %}
                                        </div>
                        {{ form_row(assignmentForm._token) }}
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-user-plus me-1"></i>{{ 'card.assignments.assign'|trans }}
                                        </button>
                    {{ form_end(assignmentForm) }}
                                </div>
                </div>
            {% elseif isEnterprise and not canManageAssignments and currentAssignments|length > 0 %}
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h3 class="h5 mb-0">
                                        <i class="fas fa-users me-2"></i>{{ 'card.assignments.title'|trans }}
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <strong class="d-block mb-2">{{ 'card.assignments.current'|trans }}:</strong>
                                    <ul class="list-group">
                            {% for assignment in currentAssignments %}
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>{{ assignment.teamMember.email }}</span>
                                                <span class="badge bg-info">{{ assignment.teamMember.role.getDisplayName()|trans }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}

            {% include 'card/_form_actions.html.twig' %}

        {{ form_end(form) }}
    </div>
</div>

<script>
function showNotification(message, type = 'success') {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3`;
    alertDiv.style.zIndex = '9999';
    alertDiv.setAttribute('role', 'alert');
    alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    `;
    document.body.appendChild(alertDiv);

    // Auto-dismiss after 3 seconds
    setTimeout(() => {
        const bsAlert = new bootstrap.Alert(alertDiv);
        bsAlert.close();
    }, 3000);
}

function copyToClipboard(text) {
    if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(text).then(function() {
            showNotification('{{ 'card.security.url_copied'|trans }}', 'success');
        }, function(err) {
            console.error('Could not copy text: ', err);
            fallbackCopyTextToClipboard(text);
        });
    } else {
        fallbackCopyTextToClipboard(text);
    }
}

function fallbackCopyTextToClipboard(text) {
    var textArea = document.createElement("textarea");
    textArea.value = text;
    textArea.style.position = "fixed";
    textArea.style.top = 0;
    textArea.style.left = 0;
    textArea.style.width = '2em';
    textArea.style.height = '2em';
    textArea.style.padding = 0;
    textArea.style.border = 'none';
    textArea.style.outline = 'none';
    textArea.style.boxShadow = 'none';
    textArea.style.background = 'transparent';
    document.body.appendChild(textArea);
    textArea.focus();
    textArea.select();
    try {
        var successful = document.execCommand('copy');
        if (successful) {
            showNotification('{{ 'card.security.url_copied'|trans }}', 'success');
        }
    } catch (err) {
        console.error('Fallback: Could not copy text: ', err);
        showNotification('{{ 'card.security.copy_error'|trans|default('Erreur lors de la copie') }}', 'danger');
    }
    document.body.removeChild(textArea);
}
</script>
{% endblock %}
