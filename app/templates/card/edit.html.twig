{% extends 'base.html.twig' %}

{% block title %}{{ 'card.edit.title'|trans }} - Hermio{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="profile-card">
        <h1>{{ 'card.edit.title'|trans }}</h1>

        {# Secure Public URL Section #}
        <div style="background: #f8f9fa; border: 2px solid #007bff; border-radius: 8px; padding: 20px; margin-bottom: 30px;">
            <h3 style="margin-top: 0; color: #007bff;">
                <i class="fas fa-lock"></i> {{ 'card.security.secure_url'|trans }}
            </h3>
            <div style="background: white; padding: 15px; border-radius: 6px; margin: 15px 0; word-break: break-all;">
                <code style="font-size: 0.9rem; color: #333;">{{ app.request.schemeAndHttpHost }}{{ card.publicUrl }}</code>
            </div>
            <div style="display: flex; gap: 10px; flex-wrap: wrap; margin-bottom: 15px;">
                <button type="button" class="btn btn-primary btn-sm" onclick="copyToClipboard('{{ app.request.schemeAndHttpHost }}{{ card.publicUrl|e('js') }}')">
                    <i class="fas fa-copy"></i> {{ 'card.security.copy_url'|trans }}
                </button>
                <a href="{{ card.publicUrl }}" target="_blank" class="btn btn-secondary btn-sm">
                    <i class="fas fa-external-link-alt"></i> {{ 'card.view'|trans }}
                </a>
                <form method="post" action="{{ path('app_card_regenerate_key', {id: card.id}) }}" style="display: inline;" onsubmit="return confirm('{{ 'card.security.regenerate_key_confirm'|trans }}');">
                    <input type="hidden" name="_token" value="{{ csrf_token('regenerate' ~ card.id) }}">
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fas fa-sync-alt"></i> {{ 'card.security.regenerate_key'|trans }}
                    </button>
                </form>
            </div>
            <div style="background: #fff3cd; border: 1px solid #ffc107; border-radius: 6px; padding: 12px; font-size: 0.9rem; color: #856404;">
                {{ 'card.security.warning'|trans }}
            </div>
        </div>

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }}" role="alert">
                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'card-form'}}) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.company) }}
            {{ form_row(form.title) }}
            {{ form_row(form.bio) }}
            {{ form_row(form.website) }}

            <h3 style="margin-top: 30px;">{{ 'card.social.title'|trans }}</h3>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.linkedin) }}
                    {{ form_row(form.instagram) }}
                    {{ form_row(form.tiktok) }}
                    {{ form_row(form.facebook) }}
                    {{ form_row(form.x) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.bluebirds) }}
                    {{ form_row(form.snapchat) }}
                    {{ form_row(form.planity) }}
                    {{ form_row(form.other) }}
                </div>
            </div>

            {% if isEnterprise and canManageAssignments and assignmentForm %}
                <div class="form-section" style="margin-top: 30px; padding-top: 30px; border-top: 2px solid #dee2e6;">
                    <h3>{{ 'card.assignments.title'|trans }}</h3>
                    <p style="color: #666; margin-bottom: 20px;">{{ 'card.assignments.description'|trans }}</p>

                    {% if currentAssignments|length > 0 %}
                        <div style="margin-bottom: 20px;">
                            <strong>{{ 'card.assignments.current'|trans }}:</strong>
                            <ul style="margin-top: 10px;">
                                {% for assignment in currentAssignments %}
                                    <li>
                                        {{ assignment.teamMember.email }}
                                        <span class="badge badge-info">{{ assignment.teamMember.role.getDisplayName()|trans }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    {{ form_start(assignmentForm, {'action': path('app_card_edit', {id: card.id}), 'method': 'POST'}) }}
                        {{ form_row(assignmentForm.teamMembers) }}
                        {{ form_row(assignmentForm._token) }}
                        <button type="submit" class="btn btn-primary">{{ 'card.assignments.assign'|trans }}</button>
                    {{ form_end(assignmentForm) }}
                </div>
            {% elseif isEnterprise and not canManageAssignments and currentAssignments|length > 0 %}
                <div class="form-section" style="margin-top: 30px; padding-top: 30px; border-top: 2px solid #dee2e6;">
                    <h3>{{ 'card.assignments.title'|trans }}</h3>
                    <div style="margin-bottom: 20px;">
                        <strong>{{ 'card.assignments.current'|trans }}:</strong>
                        <ul style="margin-top: 10px;">
                            {% for assignment in currentAssignments %}
                                <li>
                                    {{ assignment.teamMember.email }}
                                    <span class="badge badge-info">{{ assignment.teamMember.role.getDisplayName()|trans }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}

            <div style="margin-top: 30px; display: flex; gap: 15px;">
                <button type="submit" class="btn btn-primary">{{ 'card.save'|trans }}</button>
                <a href="{{ path('app_card_index') }}" class="btn btn-secondary">{{ 'card.cancel'|trans }}</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
function copyToClipboard(text) {
    if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(text).then(function() {
            alert('{{ 'card.security.url_copied'|trans }}');
        }, function(err) {
            console.error('Could not copy text: ', err);
            fallbackCopyTextToClipboard(text);
        });
    } else {
        fallbackCopyTextToClipboard(text);
    }
}

function fallbackCopyTextToClipboard(text) {
    var textArea = document.createElement("textarea");
    textArea.value = text;
    textArea.style.position = "fixed";
    textArea.style.top = 0;
    textArea.style.left = 0;
    textArea.style.width = '2em';
    textArea.style.height = '2em';
    textArea.style.padding = 0;
    textArea.style.border = 'none';
    textArea.style.outline = 'none';
    textArea.style.boxShadow = 'none';
    textArea.style.background = 'transparent';
    document.body.appendChild(textArea);
    textArea.focus();
    textArea.select();
    try {
        var successful = document.execCommand('copy');
        if (successful) {
            alert('{{ 'card.security.url_copied'|trans }}');
        }
    } catch (err) {
        console.error('Fallback: Could not copy text: ', err);
    }
    document.body.removeChild(textArea);
}
</script>
{% endblock %}

