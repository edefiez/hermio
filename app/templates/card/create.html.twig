{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'card.create.title'|trans }} - Hermio{% endblock %}

{% block page_title %}{{ 'card.create.title'|trans }}{% endblock %}

{% block admin_content %}
<div class="cards-dashboard-container" style="padding: 2rem; background: #f8f9fa; min-height: 100vh;">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-plus me-2" style="font-size: 1.5rem; color: #007bff;"></i>
                    <h1 class="mb-0" style="font-size: 1.75rem; font-weight: 600;">{{ 'card.create.title'|trans }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4" style="border-radius: 12px; background: white;">
        <div class="card-body p-4">
        {# Quota Information #}
        {% if quotaLimit %}
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle me-2"></i>{{ 'card.quota.info'|trans }}:
                {{ currentUsage }} / {{ quotaLimit }} {{ 'account.quota.cards'|trans }}
            </div>
        {% endif %}

        {% include 'card/_form_flash_messages.html.twig' %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            {% include 'card/_form_basic_info.html.twig' %}

            {% include 'card/_form_social_networks.html.twig' %}

            {% include 'card/_form_actions.html.twig' %}

        {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

