{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'card.create.title'|trans }} - Hermio{% endblock %}

{% block page_title %}{{ 'card.create.title'|trans }}{% endblock %}

{% block admin_content %}
<div class="card shadow-sm mb-4">
    <div class="card-header card-header-gradient">
        <h1 class="h3 mb-0">
            <i class="fas fa-plus me-2"></i>{{ 'card.create.title'|trans }}
        </h1>
    </div>
    <div class="card-body">
        {# Quota Information #}
        {% if quotaLimit %}
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle me-2"></i>{{ 'card.quota.info'|trans }}:
                {{ currentUsage }} / {{ quotaLimit }} {{ 'account.quota.cards'|trans }}
            </div>
        {% endif %}

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message|trans }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            {# Informations principales #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-user me-2"></i>{{ 'card.basic_info'|trans|default('Informations principales') }}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form.name.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.name.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.name) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.email.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.email) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control' ~ (form.phone.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.phone.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.phone) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.company, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.company, {'attr': {'class': 'form-control' ~ (form.company.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.company.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.company) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control' ~ (form.title.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        {% if form.title.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.title) }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.bio, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.bio, {'attr': {'class': 'form-control' ~ (form.bio.vars.errors|length > 0 ? ' is-invalid' : ''), 'rows': '5'}}) }}
                        {% if form.bio.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.bio) }}
                            </div>
                        {% endif %}
                        <small class="form-text text-muted">{{ 'card.bio.help'|trans|default('Décrivez-vous en quelques mots') }}</small>
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.website, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.website, {'attr': {'class': 'form-control' ~ (form.website.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        {% if form.website.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.website) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Réseaux sociaux #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-share-alt me-2"></i>{{ 'card.social.title'|trans }}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.linkedin, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.linkedin, {'attr': {'class': 'form-control' ~ (form.linkedin.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.linkedin.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.linkedin) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.instagram, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.instagram, {'attr': {'class': 'form-control' ~ (form.instagram.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.instagram.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.instagram) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.tiktok, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.tiktok, {'attr': {'class': 'form-control' ~ (form.tiktok.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.tiktok.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.tiktok) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.facebook, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.facebook, {'attr': {'class': 'form-control' ~ (form.facebook.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.facebook.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.facebook) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.x, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.x, {'attr': {'class': 'form-control' ~ (form.x.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.x.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.x) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.bluebirds, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.bluebirds, {'attr': {'class': 'form-control' ~ (form.bluebirds.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.bluebirds.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.bluebirds) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.snapchat, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.snapchat, {'attr': {'class': 'form-control' ~ (form.snapchat.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.snapchat.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.snapchat) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.planity, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.planity, {'attr': {'class': 'form-control' ~ (form.planity.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                            {% if form.planity.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.planity) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.other, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.other, {'attr': {'class': 'form-control' ~ (form.other.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        {% if form.other.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.other) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Actions - MUST be inside the form before form_end #}
            <div class="d-flex gap-2 justify-content-end mt-4">
                <a href="{{ path('app_card_index') }}" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>{{ 'card.cancel'|trans }}
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>{{ 'card.save'|trans }}
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

