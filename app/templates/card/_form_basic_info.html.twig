{# Informations principales #}
<div class="card mb-4">
    <div class="card-header bg-light">
        <h3 class="h5 mb-0">
            <i class="fas fa-user me-2"></i>{{ 'card.basic_info'|trans|default('Informations principales') }}
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form.name.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                {% if form.name.vars.errors|length > 0 %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.name) }}
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                {% if form.email.vars.errors|length > 0 %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.email) }}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control' ~ (form.phone.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                {% if form.phone.vars.errors|length > 0 %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.phone) }}
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.company, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.company, {'attr': {'class': 'form-control' ~ (form.company.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                {% if form.company.vars.errors|length > 0 %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.company) }}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="mb-3">
            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control' ~ (form.title.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
            {% if form.title.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.title) }}
                </div>
            {% endif %}
        </div>
        <div class="mb-3">
            {{ form_label(form.bio, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.bio, {'attr': {'class': 'form-control' ~ (form.bio.vars.errors|length > 0 ? ' is-invalid' : ''), 'rows': '5'}}) }}
            {% if form.bio.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.bio) }}
                </div>
            {% endif %}
            <small class="form-text text-muted">{{ 'card.bio.help'|trans|default('DÃ©crivez-vous en quelques mots') }}</small>
        </div>
        <div class="mb-3">
            {{ form_label(form.website, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.website, {'attr': {'class': 'form-control' ~ (form.website.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
            {% if form.website.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.website) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>
