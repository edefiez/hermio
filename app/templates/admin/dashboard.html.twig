{% extends 'base_admin.html.twig' %}

{% block page_title %}{{ 'dashboard.title'|trans }}{% endblock %}

{% block admin_content %}
<div class="dashboard-container" style="padding: 2rem; background: #f8f9fa; min-height: 100vh;">
    {# Welcome Section #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <div>
                            <h1 class="mb-2" style="font-size: 1.75rem; font-weight: 600; color: #212529;">
                                {{ 'dashboard.welcome'|trans|default('Bienvenue') }}, {{ app.user.email }}
                            </h1>
                            <p class="text-muted mb-0" style="font-size: 0.875rem;">
                                {% if memberSince %}
                                    {{ 'dashboard.member_since'|trans|default('Membre depuis') }} {{ memberSince|date('F Y')|replace({
                                        'January': 'janvier',
                                        'February': 'février',
                                        'March': 'mars',
                                        'April': 'avril',
                                        'May': 'mai',
                                        'June': 'juin',
                                        'July': 'juillet',
                                        'August': 'août',
                                        'September': 'septembre',
                                        'October': 'octobre',
                                        'November': 'novembre',
                                        'December': 'décembre'
                                    }) }}
                                    {% if daysSince > 0 %}
                                        <span class="badge bg-secondary ms-2">{{ daysSince }} {{ 'dashboard.days'|trans|default('jours') }}</span>
                                    {% endif %}
                                {% endif %}
                            </p>
                        </div>
                        <div class="mt-2 mt-md-0">
                            <a href="{{ path('app_card_create') }}" class="btn btn-primary" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                                <i class="fas fa-plus me-2"></i>{{ 'card.create.button'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="row g-4 mb-4">
        {# Plan Card #}
        <div class="col-md-3 col-12 mb-3">
            <div class="card shadow-sm h-100 border-0" style="border-radius: 12px; background: white;">
                <div class="card-header" style="background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%); border-radius: 12px 12px 0 0;">
                    <h5 class="card-title mb-0 text-dark" style="font-size: 1rem; font-weight: 600;">
                        <i class="fas fa-crown me-2"></i>{{ 'dashboard.plan.title'|trans }}
                    </h5>
                </div>
                <div class="card-body p-4 d-flex flex-column">
                    <div class="flex-grow-1">
                        <h2 class="mb-2" style="font-size: 2rem; font-weight: 700; color: #212529;">{{ planType.getDisplayName()|trans }}</h2>
                        {% if isUnlimited %}
                            <p class="text-muted mb-3" style="font-size: 0.875rem;">
                                <i class="fas fa-infinity me-1"></i>{{ 'dashboard.plan.unlimited'|trans }}
                            </p>
                        {% else %}
                            <p class="text-muted mb-3" style="font-size: 0.875rem;">{{ 'dashboard.plan.limited'|trans }}</p>
                        {% endif %}
                    </div>
                    <a href="{{ path('app_account_my_plan') }}" class="btn btn-sm btn-outline-primary w-100" style="border-radius: 8px; font-weight: 500;">
                        <i class="fas fa-info-circle me-1"></i>{{ 'account.view_plan_details'|trans }}
                    </a>
                </div>
            </div>
        </div>

        {# Card Usage Card #}
        <div class="col-md-3 col-12 mb-3">
            <div class="card shadow-sm h-100 border-0" style="border-radius: 12px; background: white;">
                <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px 12px 0 0;">
                    <h5 class="card-title mb-0 text-white" style="font-size: 1rem; font-weight: 600;">
                        <i class="fas fa-id-card me-2"></i>{{ 'dashboard.usage.title'|trans }}
                    </h5>
                </div>
                <div class="card-body p-4 d-flex flex-column">
                    <div class="flex-grow-1">
                        <h2 class="mb-2" style="font-size: 2rem; font-weight: 700; color: #212529;">
                            {{ currentUsage }} / {{ quotaLimit ?? '∞' }}
                        </h2>
                        {% if usagePercentage is not null %}
                            <div class="progress mb-2" style="height: 24px; border-radius: 12px;">
                                <div class="progress-bar
                                    {% if usagePercentage >= 100 %}bg-danger
                                    {% elseif usagePercentage >= 80 %}bg-warning
                                    {% else %}bg-success
                                    {% endif %}"
                                    role="progressbar"
                                    style="width: {{ usagePercentage }}%; border-radius: 12px;"
                                    aria-valuenow="{{ usagePercentage }}"
                                    aria-valuemin="0"
                                    aria-valuemax="100">
                                    <strong>{{ usagePercentage|round }}%</strong>
                                </div>
                            </div>
                            <small class="text-muted d-block mb-3" style="font-size: 0.875rem;">{{ 'account.quota.used'|trans }}</small>
                        {% else %}
                            <p class="text-muted mb-3" style="font-size: 0.875rem;">{{ 'account.quota.unlimited'|trans }}</p>
                        {% endif %}
                    </div>
                    <a href="{{ path('app_card_index') }}" class="btn btn-sm btn-outline-primary w-100" style="border-radius: 8px; font-weight: 500;">
                        <i class="fas fa-list me-1"></i>{{ 'nav.my_cards'|trans }}
                    </a>
                </div>
            </div>
        </div>

        {# Total Cards Card #}
        <div class="col-md-3 col-12 mb-3">
            <div class="card shadow-sm h-100 border-0" style="border-radius: 12px; background: white;">
                <div class="card-header" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border-radius: 12px 12px 0 0;">
                    <h5 class="card-title mb-0 text-white" style="font-size: 1rem; font-weight: 600;">
                        <i class="fas fa-layer-group me-2"></i>{{ 'dashboard.total_cards'|trans|default('Total Cards') }}
                    </h5>
                </div>
                <div class="card-body p-4 d-flex flex-column">
                    <div class="flex-grow-1">
                        <h2 class="mb-2" style="font-size: 2rem; font-weight: 700; color: #212529;">{{ totalCards }}</h2>
                        <p class="text-muted mb-3" style="font-size: 0.875rem;">
                            <i class="fas fa-check-circle text-success me-1"></i>{{ activeCards }} {{ 'dashboard.active'|trans|default('active') }}
                        </p>
                    </div>
                    <a href="{{ path('app_card_index') }}" class="btn btn-sm btn-outline-info w-100" style="border-radius: 8px; font-weight: 500;">
                        <i class="fas fa-eye me-1"></i>{{ 'dashboard.view_all'|trans|default('View All') }}
                    </a>
                </div>
            </div>
        </div>

        {# Quick Actions Card #}
        <div class="col-md-3 col-12 mb-3">
            <div class="card shadow-sm h-100 border-0" style="border-radius: 12px; background: white;">
                <div class="card-header" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); border-radius: 12px 12px 0 0;">
                    <h5 class="card-title mb-0 text-white" style="font-size: 1rem; font-weight: 600;">
                        <i class="fas fa-bolt me-2"></i>{{ 'dashboard.quick_actions.title'|trans }}
                    </h5>
                </div>
                <div class="card-body p-4 d-flex flex-column justify-content-center">
                    <div class="d-grid gap-2 w-100">
                        <a href="{{ path('app_card_create') }}" class="btn btn-primary btn-sm" style="border-radius: 8px; font-weight: 500;">
                            <i class="fas fa-plus me-1"></i>{{ 'card.create.button'|trans }}
                        </a>
                        <a href="{{ path('app_account_index') }}" class="btn btn-outline-secondary btn-sm" style="border-radius: 8px; font-weight: 500;">
                            <i class="fas fa-user-circle me-1"></i>{{ 'nav.account'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Analytics Section - Enterprise Only #}
    {% if analytics %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-header card-header-gradient text-white" style="border-radius: 12px 12px 0 0;">
                    <h5 class="card-title mb-0 text-white" style="font-size: 1rem; font-weight: 600;">
                        <i class="fas fa-chart-line me-2"></i>{{ 'dashboard.analytics.title'|trans|default('QR Code Analytics') }}
                    </h5>
                </div>
                <div class="card-body p-4">
                    {# Analytics Summary Stats #}
                    <div class="row mb-4">
                        <div class="col-md-4 col-12 mb-3">
                            <div class="card shadow-sm border-0 h-100" style="border-radius: 12px; background: white;">
                                <div class="card-body p-4 text-center">
                                    <h2 class="mb-2" style="font-size: 2rem; font-weight: 700; color: #212529;">{{ analytics.totalScans }}</h2>
                                    <p class="text-muted mb-0" style="font-size: 0.875rem; font-weight: 500;">{{ 'dashboard.analytics.total_scans'|trans|default('Total Scans') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-12 mb-3">
                            <div class="card shadow-sm border-0 h-100" style="border-radius: 12px; background: white;">
                                <div class="card-body p-4 text-center">
                                    <h2 class="mb-2" style="font-size: 2rem; font-weight: 700; color: #212529;">{{ analytics.cardCount }}</h2>
                                    <p class="text-muted mb-0" style="font-size: 0.875rem; font-weight: 500;">{{ 'dashboard.analytics.tracked_cards'|trans|default('Tracked Cards') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-12 mb-3">
                            <div class="card shadow-sm border-0 h-100" style="border-radius: 12px; background: white;">
                                <div class="card-body p-4 text-center">
                                    <h2 class="mb-2" style="font-size: 2rem; font-weight: 700; color: #212529;">{{ (analytics.totalScans / 30)|round(1) }}</h2>
                                    <p class="text-muted mb-0" style="font-size: 0.875rem; font-weight: 500;">{{ 'dashboard.analytics.avg_per_day'|trans|default('Avg Scans/Day') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Scans Per Day Chart #}
                    <div class="mb-4">
                        <h6 class="mb-3" style="font-size: 1rem; font-weight: 600; color: #212529;">{{ 'dashboard.analytics.scans_per_day'|trans|default('Scans Per Day (Last 30 Days)') }}</h6>
                        <div style="position: relative; height: 300px; width: 100%;">
                            <canvas id="scansPerDayChart"></canvas>
                        </div>
                    </div>

                    {# Top Cards Table #}
                    {% if analytics.topCards|length > 0 %}
                    <div>
                        <h6 class="mb-3" style="font-size: 1rem; font-weight: 600; color: #212529;">{{ 'dashboard.analytics.top_cards'|trans|default('Most Scanned Cards') }}</h6>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>{{ 'dashboard.analytics.rank'|trans|default('Rank') }}</th>
                                        <th>{{ 'dashboard.analytics.card_name'|trans|default('Card Name') }}</th>
                                        <th>{{ 'dashboard.analytics.slug'|trans|default('Slug') }}</th>
                                        <th class="text-end">{{ 'dashboard.analytics.scans'|trans|default('Scans') }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for card in analytics.topCards %}
                                    <tr>
                                        <td>
                                            {% if loop.index == 1 %}
                                                <i class="fas fa-trophy text-warning"></i>
                                            {% elseif loop.index == 2 %}
                                                <i class="fas fa-medal text-secondary"></i>
                                            {% elseif loop.index == 3 %}
                                                <i class="fas fa-medal" style="color: #cd7f32;"></i>
                                            {% else %}
                                                <span class="text-muted">{{ loop.index }}</span>
                                            {% endif %}
                                        </td>
                                        <td><strong>{{ card.name|default('N/A') }}</strong></td>
                                        <td><code>{{ card.slug }}</code></td>
                                        <td class="text-end">
                                            <span class="badge bg-primary">{{ card.scan_count }}</span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Chart.js Data and Initialization #}
    <script>
        window.analyticsData = {
            scansPerDay: {{ analytics.scansPerDay|json_encode|raw }}
        };

        // Initialize Chart.js graph
        (function() {
            function initScansPerDayChart() {
                const chartCanvas = document.getElementById('scansPerDayChart');
                
                if (!chartCanvas || !window.analyticsData || !window.Chart) {
                    // Retry if Chart.js or data not ready
                    if (window.Chart && window.analyticsData) {
                        setTimeout(initScansPerDayChart, 100);
                    }
                    return;
                }

                const scansPerDay = window.analyticsData.scansPerDay;
                
                if (!scansPerDay || Object.keys(scansPerDay).length === 0) {
                    return;
                }
                
                // Prepare data for Chart.js
                const dates = Object.keys(scansPerDay).sort();
                const counts = dates.map(date => scansPerDay[date]);

                // Format dates for display (MM/DD)
                const labels = dates.map(date => {
                    const d = new Date(date);
                    return `${d.getMonth() + 1}/${d.getDate()}`;
                });

                // Create the chart with SmartAdmin styling
                const ctx = chartCanvas.getContext('2d');
                
                // Destroy existing chart if it exists
                if (chartCanvas.chart) {
                    chartCanvas.chart.destroy();
                }
                
                chartCanvas.chart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: '{{ 'dashboard.analytics.scans'|trans|default('Scans') }}',
                            data: counts,
                            borderColor: 'rgb(102, 126, 234)',
                            backgroundColor: 'rgba(102, 126, 234, 0.1)',
                            tension: 0.4,
                            fill: true,
                            pointRadius: 4,
                            pointHoverRadius: 6,
                            pointBackgroundColor: 'rgb(102, 126, 234)',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointHoverBackgroundColor: 'rgb(102, 126, 234)',
                            pointHoverBorderColor: '#fff',
                            pointHoverBorderWidth: 3,
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                mode: 'index',
                                intersect: false,
                                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                padding: 12,
                                titleFont: {
                                    size: 14,
                                    weight: 'bold'
                                },
                                bodyFont: {
                                    size: 13
                                },
                                callbacks: {
                                    title: function(tooltipItems) {
                                        const index = tooltipItems[0].dataIndex;
                                        const date = new Date(dates[index]);
                                        return date.toLocaleDateString('fr-FR', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        });
                                    },
                                    label: function(context) {
                                        return '{{ 'dashboard.analytics.scans'|trans|default('Scans') }}: ' + context.parsed.y;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1,
                                    precision: 0,
                                    color: '#6c757d',
                                    font: {
                                        size: 12
                                    }
                                },
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)',
                                    drawBorder: false
                                }
                            },
                            x: {
                                ticks: {
                                    color: '#6c757d',
                                    font: {
                                        size: 11
                                    },
                                    maxRotation: 45,
                                    minRotation: 45
                                },
                                grid: {
                                    display: false,
                                    drawBorder: false
                                }
                            }
                        },
                        interaction: {
                            mode: 'nearest',
                            axis: 'x',
                            intersect: false
                        },
                        elements: {
                            line: {
                                borderWidth: 2
                            }
                        }
                    }
                });
            }

            // Initialize when DOM is ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    // Wait for Chart.js to be available
                    if (window.Chart) {
                        initScansPerDayChart();
                    } else {
                        // Wait for Chart.js to load
                        let attempts = 0;
                        const checkChart = setInterval(function() {
                            attempts++;
                            if (window.Chart) {
                                clearInterval(checkChart);
                                initScansPerDayChart();
                            } else if (attempts > 50) {
                                clearInterval(checkChart);
                                console.warn('Chart.js not loaded after 5 seconds');
                            }
                        }, 100);
                    }
                });
            } else {
                // DOM already loaded
                if (window.Chart) {
                    initScansPerDayChart();
                } else {
                    setTimeout(function() {
                        if (window.Chart) {
                            initScansPerDayChart();
                        }
                    }, 100);
                }
            }
        })();
    </script>
    {% endif %}

    {# Upgrade Prompt for Pro Users #}
    {% if showUpgradePrompt %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white; border: 2px solid #ffc107;">
                <div class="card-header bg-warning text-dark" style="border-radius: 12px 12px 0 0;">
                    <h5 class="card-title mb-0" style="font-size: 1rem; font-weight: 600;">
                        <i class="fas fa-lock me-2"></i>{{ 'dashboard.analytics.locked'|trans|default('Analytics Feature Locked') }}
                    </h5>
                </div>
                <div class="card-body text-center py-5 p-4">
                    <i class="fas fa-chart-bar fa-4x text-warning mb-3"></i>
                    <h4 class="mb-3" style="font-size: 1.5rem; font-weight: 600; color: #212529;">{{ 'dashboard.analytics.upgrade_title'|trans|default('Unlock Advanced Analytics') }}</h4>
                    <p class="text-muted mb-4" style="font-size: 0.875rem;">
                        {{ 'dashboard.analytics.upgrade_message'|trans|default('Track your QR code scans, view daily statistics, and see which cards perform best. Upgrade to Enterprise plan to access these powerful insights.') }}
                    </p>
                    <a href="{{ path('app_account_my_plan') }}" class="btn btn-warning" style="padding: 0.5rem 1.5rem; font-weight: 500; border-radius: 8px;">
                        <i class="fas fa-crown me-2"></i>{{ 'dashboard.analytics.upgrade_button'|trans|default('Upgrade to Enterprise') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# Recent Activity Section #}
    {% if recentActivity|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="border-radius: 12px; background: white;">
                <div class="card-header bg-light" style="border-radius: 12px 12px 0 0;">
                    <h5 class="card-title mb-0" style="font-size: 1rem; font-weight: 600; color: #212529;">
                        <i class="fas fa-clock me-2"></i>{{ 'dashboard.cards.recent_activity'|trans }}
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>{{ 'dashboard.activity.event'|trans|default('Event') }}</th>
                                    <th>{{ 'dashboard.activity.date'|trans|default('Date/Time') }}</th>
                                    <th>{{ 'dashboard.activity.status'|trans|default('Status') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for log in recentActivity %}
                                <tr>
                                    <td>
                                        {% if log.eventType == 'login_success' %}
                                            <i class="fas fa-sign-in-alt text-success me-2"></i>{{ 'dashboard.activity.login'|trans|default('Login') }}
                                        {% elseif log.eventType == 'logout' %}
                                            <i class="fas fa-sign-out-alt text-info me-2"></i>{{ 'dashboard.activity.logout'|trans|default('Logout') }}
                                        {% elseif log.eventType == 'registration' %}
                                            <i class="fas fa-user-plus text-primary me-2"></i>{{ 'dashboard.activity.registration'|trans|default('Registration') }}
                                        {% else %}
                                            <i class="fas fa-circle text-muted me-2"></i>{{ log.eventType|replace({'_': ' '})|title }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small>{{ log.timestamp|date('Y-m-d H:i:s') }}</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ log.successful ? 'success' : 'danger' }}">
                                            {{ log.successful ? ('dashboard.activity.success'|trans|default('Success')) : ('dashboard.activity.failed'|trans|default('Failed')) }}
                                        </span>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

