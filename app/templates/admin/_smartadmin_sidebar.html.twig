<aside class="app-sidebar d-flex flex-column">
	
    {# App Logo #}
    <a href="{{ path('app_dashboard') }}" class="app-logo flex-shrink-0">
        <svg class="custom-logo" width="32" height="32" viewBox="0 0 32 32">
            <text x="50%" y="50%" text-anchor="middle" dominant-baseline="middle" font-size="20" font-weight="bold" fill="currentColor">H</text>
        </svg>
    </a>
							
    {# Menu Filter #}
    <div class="px-3 pt-3 pb-2">
        <input type="text" class="form-control form-control-sm" id="js-nav-filter" placeholder="{{ 'nav.search'|trans|default('Search menu...') }}" aria-label="{{ 'nav.search'|trans|default('Search menu...') }}">
    </div>

	<nav id="js-primary-nav" class="primary-nav flex-grow-1 custom-scroll">

        <ul id="js-nav-menu" class="nav flex-column" role="menu">
            <li class="nav-item" role="menuitem">
                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}"
                   href="{{ path('app_dashboard') }}">
                    <svg class="sa-icon">
                        <use href="/icons/sprite.svg#home"></use>
                    </svg>
                    <span class="nav-link-text">{{ 'nav.dashboard'|trans }}</span>
                </a>
            </li>
            <li class="nav-item" role="menuitem">
                <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_card' %}active{% endif %}"
                   href="{{ path('app_card_index') }}">
                    <svg class="sa-icon">
                        <use href="/icons/sprite.svg#credit-card"></use>
                    </svg>
                    <span class="nav-link-text">{{ 'nav.my_cards'|trans }}</span>
                </a>
            </li>
            <li class="nav-item" role="menuitem">
                <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_account' %}active{% endif %}"
                   href="{{ path('app_account_index') }}">
                    <svg class="sa-icon">
                        <use href="/icons/sprite.svg#settings"></use>
                    </svg>
                    <span class="nav-link-text">{{ 'nav.account'|trans }}</span>
                </a>
            </li>
            <li class="nav-item" role="menuitem">
                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}"
                   href="{{ path('app_profile') }}">
                    <svg class="sa-icon">
                        <use href="/icons/sprite.svg#user"></use>
                    </svg>
                    <span class="nav-link-text">{{ 'nav.profile'|trans }}</span>
                </a>
            </li>
            {% if app.user and app.user.account %}
                {% set planType = app.user.account.planType %}
                {% if planType.value == 'pro' or planType.value == 'enterprise' %}
                    <li class="nav-item" role="menuitem">
                        <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_branding' %}active{% endif %}"
                           href="{{ path('app_branding_configure') }}">
                            <svg class="sa-icon">
                                <use href="/icons/sprite.svg#droplet"></use>
                            </svg>
                            <span class="nav-link-text">{{ 'nav.branding'|trans }}</span>
                        </a>
                    </li>
                {% endif %}
            {% endif %}
        </ul>

		<div class="no-results-msg pt-3 info-container">
			<h6 class="mb-1">{{ 'nav.no_results'|trans|default('No menu items found.') }}</h6>
			<p class="fs-sm">{{ 'nav.try_different_keywords'|trans|default('Try searching with different keywords.') }}</p>
			<div class="d-flex align-items-center gap-1 fs-xs fw-500 font-style-italic">
				<kbd class="kbd-key">
					<svg width="15" height="15" aria-label="Escape key" role="img">
						<g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.2">
							<path d="M13.6167 8.936c-.1065.3583-.6883.962-1.4875.962-.7993 0-1.653-.9165-1.653-2.1258v-.5678c0-1.2548.7896-2.1016 1.653-2.1016.8634 0 1.3601.4778 1.4875 1.0724M9 6c-.1352-.4735-.7506-.9219-1.46-.8972-.7092.0246-1.344.57-1.344 1.2166s.4198.8812 1.3445.9805C8.465 7.3992 8.968 7.9337 9 8.5c.032.5663-.454 1.398-1.4595 1.398C6.6593 9.898 6 9 5.963 8.4851m-1.4748.5368c-.2635.5941-.8099.876-1.5443.876s-1.7073-.6248-1.7073-2.204v-.4603c0-1.0416.721-2.131 1.7073-2.131.9864 0 1.6425 1.031 1.5443 2.2492h-2.956"></path>
						</g>
					</svg>
				</kbd>
				{{ 'nav.to_reset'|trans|default('to reset') }}
			</div>
		</div>
	</nav>

	<div class="nav-footer">
		<svg class="sa-icon sa-thin">
			<use href="/icons/sprite.svg#wifi"></use>
		</svg>
	</div>
</aside>

<div class="backdrop" data-action="toggle-swap" data-toggleclass="app-mobile-menu-open"></div>
