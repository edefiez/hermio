{% extends 'layouts/vertical.html.twig' %}

{% set pageTitle = "Manage Records" %}
{% set pageSubTitle1 = "Smart Tables" %}
{% set pageSubTitle2 = "Data Visualization" %}
{% set pageSubText = "Functionality for managing records with full CRUD (Create, Read, Update, Delete) operations. This allows you to build interactive data management interfaces with minimal effort." %}

{% block content %}

	<div class="main-content">
		<div class="info-container">
			Turn on
			<strong>Edit, Add, and Delete</strong>
			feature by using
			<code>addRecord: true</code>
			and use hooks create custom form elements.
		</div>
		<div class="row">
			<div class="col-lg-12">
				<table class="table table-striped table-bordered table-hover d-none" id="clientTable"></table>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	 <script src="/scripts/pages/smarttablesmanagerecords.js" type="module"></script>
{% endblock %}
